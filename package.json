{
  "name": "@slzsid/rabbitmq-multinode-connector",
  "version": "0.3.2",
  "description": "Enterprise-grade RabbitMQ client with connection pooling, circuit breaker, cluster support, and comprehensive monitoring",
  "keywords": [
    "rabbitmq",
    "amqp",
    "message-queue",
    "microservices",
    "connection-pool",
    "circuit-breaker",
    "cluster",
    "failover",
    "event-driven",
    "messaging",
    "typescript",
    "enterprise",
    "multinode"
  ],
  "license": "MIT",
  "author": "SleepySid",
  "repository": {
    "type": "git",
    "url": "https://github.com/SleepySid/multi_node_rabbit_connector.git"
  },
  "bugs": {
    "url": "https://github.com/SleepySid/multi_node_rabbit_connector/issues"
  },
  "homepage": "https://github.com/SleepySid/multi_node_rabbit_connector#readme",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:prod": "npm run clean && npm run build:esm:prod && npm run build:cjs && npm run minify",
    "build:esm": "tsc",
    "build:esm:prod": "tsc -p tsconfig.prod.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && npm run build:cjs:fixup",
    "build:cjs:fixup": "cd dist/cjs && for f in *.js; do sed -i 's/\\.js\"/\\.cjs\"/g' \"$f\" && mv \"$f\" \"${f%.js}.cjs\"; done",
    "build:watch": "tsc --watch",
    "minify": "node scripts/minify.js",
    "clean": "rm -rf dist build coverage .tsbuildinfo",
    "prepublishOnly": "npm run build:prod",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "preversion": "npm run build:prod",
    "postversion": "git push && git push --tags",
    "size": "npm pack --dry-run 2>&1 | grep -E '(size|kB)'"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "amqplib": "^0.10.9",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/amqplib": "^0.10.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.32.1",
    "audit-ci": "^7.1.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "terser": "^5.44.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.9.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
